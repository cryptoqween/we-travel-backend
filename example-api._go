package example

import (
	"bytes"
	"encoding/json"
	"fmt"
	"io/ioutil"
	"log"
	"net/http"
	"strconv"

	"github.com/gorilla/mux"
)

type event struct {
	ID          int    `json: "id"`
	Title       string `json: "title"`
	Description string `json: "description"`
}

type allEvents []event

var events = allEvents{
	{
		ID:          1,
		Title:       "Intro to golang",
		Description: "BLablablabla balbalbala",
	},
}

func createEvent(w http.ResponseWriter, r *http.Request) {
	var newEvent event
	reqBody, err := ioutil.ReadAll(r.Body)
	if err != nil {
		fmt.Fprintf(w, "Bad input")
	}

	json.Unmarshal(reqBody, &newEvent)
	events = append(events, newEvent)
	w.WriteHeader(http.StatusCreated)

	json.NewEncoder(w).Encode(newEvent)
}

func getEvent(w http.ResponseWriter, r *http.Request) {
	eventID, err := strconv.Atoi(mux.Vars(r)["id"])
	if err != nil {
		fmt.Fprintf(w, "Invalid ID")
	}

	for _, singleEvent := range events {
		if singleEvent.ID == eventID {
			json.NewEncoder(w).Encode(singleEvent)
		}
	}
	// TODO: handle error when no event found for ID
}

func deleteEvent(w http.ResponseWriter, r *http.Request) {
	eventID, err := strconv.Atoi(mux.Vars(r)["id"])
	if err != nil {
		fmt.Fprintf(w, "Invalid ID")
	}

	for i, singleEvent := range events {
		if singleEvent.ID == eventID {
			events = append(events[:i], events[i+1])
			fmt.Fprintf(w, "Event deleted: %v", eventID)
		}
	}
}

type Request struct {
	directFlights int    `json: "directFlights"`
	flyFrom       string `json: "flyFrom"`
	dateTo        string `json: "dateTo"`
	dateFrom      string `json: "dateFrom"`
	to            string `json: "to"`
}

type body struct {
	requests []Request
}

func getAllEvents(w http.ResponseWriter, r *http.Request) {
	requests := []Request{
		{
			to:            "AMS",
			flyFrom:       "PRG",
			directFlights: 0,
			dateFrom:      "11/11/2019",
			dateTo:        "11/11/2019",
		},
		{
			to:            "LON",
			flyFrom:       "AMS",
			directFlights: 0,
			dateFrom:      "11/11/2019",
			dateTo:        "11/11/2019",
		},
	}
	values := body{
		requests: requests,
	}
	jsonValue, _ := json.Marshal(values)
	var jsonStr = bytes.NewBuffer(jsonValue)
	var url = "https://kiwicom-prod.apigee.net/v2/flights_multi?locale=en&curr=GBP"
	req, err := http.NewRequest("POST", url, jsonStr)
	req.Header.Set("apikey", "ybSQtxaeXetISMayrvXaBepKDClCIkjK")
	req.Header.Set("Content-Type", "application/json")

	client := &http.Client{}
	resp, err := client.Do(req)
	if err != nil {
		panic(err)
	}
	fmt.Println(resp)
	defer resp.Body.Close()
	json.NewEncoder(w).Encode(resp)
}

func homeLink(w http.ResponseWriter, r *http.Request) {
	fmt.Fprintf(w, "Welcome Home")
}

func main() {
	router := mux.NewRouter().StrictSlash(true)
	router.HandleFunc("/", homeLink)
	router.HandleFunc("/event", createEvent).Methods("POST")
	router.HandleFunc("/events", getAllEvents).Methods("GET")
	router.HandleFunc("/events/{id}", getEvent).Methods("GET")
	router.HandleFunc("/events/{id}", deleteEvent).Methods("DELETE")
	fmt.Println("Listening on http://localhost:8080")
	log.Fatal(http.ListenAndServe(":8080", router))
}
